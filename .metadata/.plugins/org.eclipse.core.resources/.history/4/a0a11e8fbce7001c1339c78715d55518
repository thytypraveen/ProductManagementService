package com.ItemCommentService.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.ItemCommentService.entity.Item;
import com.ItemCommentService.entity.ItemDTO;
import com.ItemCommentService.entity.UserDTO;
import com.ItemCommentService.service.ItemService;

@RestController
@RequestMapping("/items")
public class ItemController {
	@Autowired
	ItemService itemService;

	@PostMapping("/add")
	public Item add(UserDTO userDTO, @RequestBody Item it){
		return itemService.addItem(userDTO,it).get();
	}

	@GetMapping("{id}")
	public Optional<Item> getItemById(ItemDTO itemDTO){
		return itemService.getByItemId(itemDTO.getItemId());
	}

	@PutMapping("/{itemId}")
	public Optional<Item> updateItem(ItemDTO itemDTO,@RequestBody Item item){
		itemService.updateItem(itemDTO.getItemId(),item);
		return itemService.getByItemId(itemDTO.getItemId());
	}


	@GetMapping("allItems/{id}")
	public List<Item> getAllItems(ItemDTO itemDTO){
		return itemService.getAll(itemDTO.getItemId());
	}

	@DeleteMapping("{id}")
	public void delete(ItemDTO itemDTO){
		itemService.deleteItem(itemDTO.getItemId());
	}

}
