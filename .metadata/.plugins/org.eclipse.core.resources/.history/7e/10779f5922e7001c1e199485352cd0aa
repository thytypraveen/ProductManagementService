package com.ItemCommentService.controller;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.autoconfigure.domain.EntityScan;
import org.springframework.boot.context.properties.EnableConfigurationProperties;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;

@EnableEurekaClient
@EnableConfigurationProperties
@EntityScan(basePackages = {"com.ItemCommentService.entity"}) 
@SpringBootApplication
public class ItemCommentsServiceApplication {

	public static void main(String[] args) {
		SpringApplication.run(ItemCommentsServiceApplication.class, args);
	}

}
